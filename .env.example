# Project Zero Configuration
# Copy this file to .env and adjust the values as needed

# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=legal_platform
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# File Upload Configuration
MAX_FILE_SIZE=25MB
UPLOAD_DIR=uploads
TEMP_DIR=uploads/temp

# External API Keys
OPENAI_API_KEY=your_openai_api_key_here
DOCUSIGN_API_KEY=your_docusign_api_key_here
ADOBE_API_KEY=your_adobe_api_key_here

# Feature Flags
ENABLE_ANALYSIS=true
ENABLE_COMPARISON=true
ENABLE_SIGNATURES=true
ENABLE_REPORTS=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Security Settings
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Document Processing Settings
ANALYSIS_TIMEOUT=300000
COMPARISON_TIMEOUT=180000
MAX_DOCUMENT_SIZE=25000000

# Default User Credentials
ADMIN_PASSWORD=admin123
ANALYST_PASSWORD=analyst123
USER_PASSWORD=user123

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@legalplatform.com

# Security
SESSION_SECRET=your-secret-key-here

# API Keys (replace with your actual keys)
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Upload Limits
SUPPORTED_DOCUMENT_TYPES=pdf,doc,docx,txt

# E-Signature
MAX_SIGNATURE_SIZE=1048576 # 1MB
SUPPORTED_SIGNATURE_TYPES=png,jpg,jpeg

# File Upload Settings
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,txt

# Feature Flags
ENABLE_AUTO_RESTART=false
ENABLE_DETAILED_LOGGING=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100 